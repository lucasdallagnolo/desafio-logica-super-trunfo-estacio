#include <stdio.h>

// Estrutura para armazenar os dados de uma carta do Super Trunfo
struct Carta {
    char estado[3];
    char codigo[5];
    char cidade[30];
    int populacao;
    float area;
    float pib;
    int pontos_turisticos;
    float densidade_populacional;
    float pib_per_capita;
};

int main() {
    struct Carta c1, c2;

    // Cadastro da carta 1
    printf("Digite o nome da cidade da Carta 1: ");
    scanf(" %29[^\n]", c1.cidade);
    printf("Digite a população da Carta 1: ");
    scanf("%d", &c1.populacao);
    printf("Digite a área da Carta 1: ");
    scanf("%f", &c1.area);
    printf("Digite o PIB da Carta 1: ");
    scanf("%f", &c1.pib);

    c1.densidade_populacional = c1.populacao / c1.area;
    c1.pib_per_capita = c1.pib / c1.populacao;

    // Cadastro da carta 2
    printf("\nDigite o nome da cidade da Carta 2: ");
    scanf(" %29[^\n]", c2.cidade);
    printf("Digite a população da Carta 2: ");
    scanf("%d", &c2.populacao);
    printf("Digite a área da Carta 2: ");
    scanf("%f", &c2.area);
    printf("Digite o PIB da Carta 2: ");
    scanf("%f", &c2.pib);

    c2.densidade_populacional = c2.populacao / c2.area;
    c2.pib_per_capita = c2.pib / c2.populacao;

    // Comparação baseada na População (exemplo fixo)
    printf("\n--- Comparação por População ---\n");
    printf("Carta 1 - %s: %d habitantes\n", c1.cidade, c1.populacao);
    printf("Carta 2 - %s: %d habitantes\n", c2.cidade, c2.populacao);

    if (c1.populacao > c2.populacao) {
        printf("Resultado: Carta 1 (%s) venceu!\n", c1.cidade);
    } else if (c2.populacao > c1.populacao) {
        printf("Resultado: Carta 2 (%s) venceu!\n", c2.cidade);
    } else {
        printf("Resultado: Empate!\n");
    }

    return 0;
}
